{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**"  ],
          "src": "../src"
        }
      ],
      "dest": "api",
      "force": true,
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [          
          "api/**.yml"
        ]
      },
      {
        "files": [          
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",  
          "api/*.md",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "../docs",
    "globalMetadataFiles": [],
    "globalMetadata": {
      "_appTitle": "Vim.Math3D",
      "_appLogoPath": "images/vim_color_logo_landscape_whitetext_small.png",
      "_appFaviconPath": "images/favicon.ico",
      "_appFooter": "Copyright <a href='https://vimaec.com'>VIM</a> 2021</a>, Generated by <a href='https://https://dotnet.github.io/docfx/'>DocFX</a>",
      "_disableContribution": false
    },
    "fileMetadataFiles": [],
    "template": [
      "statictoc", "templates/vim" 
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
